@model IEnumerable<EMF.Models.Favorite>

@{
    ViewData["Title"] = "KLove Favorites";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<table border="0"> 
    <tr>
        <td valign="bottom"><img src="~/images/klove.png" /></td>
        <td valign="bottom" style="font-size:30px">Favorites</td>
    </tr>
</table>
 <span style="font-size:30px"></span>

<table class="table table-striped table-bordered">
    <thead>
        <tr>
            <th style="display:none">
                @Html.DisplayNameFor(model => model.EmfId)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Verse)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td style="display:none">
                    @Html.DisplayFor(modelItem => item.EmfId)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Verse)
                </td>
                <td>
                    <a asp-action="Delete" asp-controller="Favorites" asp-route-id="@item.Id">Remove</a>
                </td>
            </tr>
        }
    </tbody>
</table>
